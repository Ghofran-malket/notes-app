{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1>Your Notes</h1>

        <div class="row">
            {% for note in notes %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header">
                            <h5 class="card-title">{{ note.title }}</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ note.content }}</p>
                            <a href="{{ path('note_edit', { title: note.title }) }}" class="btn btn-warning">Edit</a>
                            <a href="{{ path('note_delete', { title: note.title }) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this note?');">Delete</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>No notes available.</p>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <a href="{{ path('note_new') }}" class="btn btn-success">Add New Note</a>
    </div>

{% endblock %}
